<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal"
>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent">
            <View android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#666666"
                  android:alpha=".5"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginRight="15dp"
                      android:layout_marginLeft="15dp"
                      android:layout_gravity="center"
                      android:background="#fff">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="EVENT NAME"
                      android:gravity="center"
                      android:paddingTop="15dp"
                      android:textColor="#fff"
                      android:paddingBottom="15dp"
                      android:background="#7e14d3"
                      android:textSize="28sp"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:textColor="#505a5a"
                      android:textSize="21sp"
                      android:layout_marginTop="20dp"
                      android:layout_marginBottom="20dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:text="fgfhgfhfhfhfhghfhfyyrytrytrytrtyrtyrtyryryryryryryryrryrrrtrtrrtrrrrrrrrrrrrrtrtrtrtrtrtrtrtrrrryrrrtrtetertewredtwretydwrytetyfeytrfytwerfytwerfrtyweftyftyeftyeretrwtyerywrwrteyrwtertwrftywrtywreytrweytrwer"/>
            <View android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#e5e5e5"
                  android:layout_marginBottom="20dp"/>
            <Button android:layout_width="wrap_content"
                    android:background="@drawable/ok_button_background"
                    android:text="OK"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>