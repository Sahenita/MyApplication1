<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:elevation="5dp"
                android:background="@drawable/stall_row_background">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
        <LinearLayout
                android:id="@+id/lin_row_stall_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:weightSum="2">
            <LinearLayout
                    android:id="@+id/lin_stallname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:gravity="left"
            >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#666666"
                          android:textSize="25sp"
                          android:text="STALL NAME"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lin_stall_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical"
                    android:clickable="true"
                    android:gravity="right"
            >
                <TextView
                        android:id="@+id/tv_stall_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@drawable/button_green"
                        android:text="Visited"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/lin_navigate"
                android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/lin_row_stall_inactive">
            <LinearLayout
                    android:id="@+id/lin_row_stall_inactive_drescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="2">
                <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:gravity="left"
                >
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#a3a3ad"
                              android:textSize="21sp"
                              android:text="dfdddddddddddfghghghghghghghghghghghgghghghggghgg"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/lin_stall_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:gravity="right|center_vertical"
                >
                    <TextView
                            android:id="@+id/tv_stall_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:paddingRight="12dp"
                            android:paddingLeft="12dp"
                            android:paddingTop="6dp"
                            android:drawableLeft="@drawable/location"
                            android:drawablePadding="3dp"
                            android:paddingBottom="6dp"
                            android:background="@drawable/button_green_squear"
                            android:text="Navigate"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/lin_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/lin_navigate">
            <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"

            >
            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>